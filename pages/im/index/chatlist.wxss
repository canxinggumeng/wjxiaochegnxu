.rcd-conversation-content{
  border-bottom: 1px solid #E9E9E9;
  display: flex;
  padding: 18rpx 20rpx 18rpx 0rpx;
  height: 90rpx;
}
.rcd-conversation-item:active{
  background-color: #ECECEC;
}
.rcd-conversation-avatar{
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
  position: relative;
  line-height:10px;
}
.rcd-group-avatar-box{
  width: 90rpx;
  height: 90rpx;
  overflow: hidden;
  background-color: #F0EFF5;
  border-radius: 9rpx;
  padding:5rpx;
  box-sizing: border-box;
}
.rcd-group-user-avatar{
  display: inline-block;
  width: 26rpx;
  height: 26rpx;
  background: no-repeat center center;
  background-size: cover;
}
.rcd-group-user-avatar:nth-of-type(1){
  margin: 0 2rpx 2rpx 0;
}
.rcd-group-user-avatar:nth-of-type(2){
  margin: 0 2rpx 2rpx 0;
}
.rcd-group-user-avatar:nth-of-type(3){
  margin-bottom: 2rpx;
}
.rcd-group-user-avatar:nth-of-type(4){
  margin: 0 2rpx 2rpx 0;
}
.rcd-group-user-avatar:nth-of-type(5){
  margin: 0 2rpx 2rpx 0;
}
.rcd-group-user-avatar:nth-of-type(6){
  margin-bottom: 2rpx;
}
.rcd-group-user-avatar:nth-of-type(8){
  margin: 0 2rpx;
}
.rcd-conversation-avatar image{
  display: block;
  width: 86rpx;
  height: 86rpx;
  border-radius: 6rpx;
}
.rcd-conversation-unread{
  position: absolute;
  top: 50rpx;
  right: -611rpx;
  background-color: #fd4d4d;
  width: 36rpx;
  height: 36rpx;
  display: inline-block;
  border-radius: 18rpx;
  line-height: 36rpx;
  color: #fff;
  text-align: center;
  font-size: 12px;
}
.rcd-conversation-info{
  flex-grow: 1;
  overflow: hidden;
  padding: 6rpx 0rpx;
}
.rcd-conversation-nickname{
  font-size: 30rpx;
  color: #333333; 
  line-height: 46rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
  font-weight: bold;
}
.rcd-conversation-msg{
  font-size: 26rpx;
  color: #666666;
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
  position:absolute;
  bottom:20rpx;
  width:500rpx;
}
.rcd-conversation-ext{
  float: right;
  text-align: right;
  font-size: 24rpx;
  color: #666666;
  position: relative;
  top: 10rpx;
  padding-right: 30rpx;
}

 .touch-move-active .content,
 .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
 }
 /* 左滑删除 */
.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  /* border-bottom:1px solid #ccc; */
  width: 100%;
  overflow: hidden
 }
 .content {
  width: 100%;
  /* padding: 10px; */
  line-height: 22px;
  margin-right:0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px
 }